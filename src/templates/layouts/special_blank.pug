block variables
	- var months = ['jan','fev','mar','abr','mai','jun','jul','ago','set','out','nov','dez'];
	- var ENV = (process.env.NODE_EV === 'production' || process.env.NODE_EV === 'staging') ? process.env.NODE_EV : 'development';
	- var section= config.section;
	- var section_slug= config.section.toLowerCase();
	- var credit = config.credit;
	- var origin = config.origin;
	- var publish_date = config.publish_date.split('/')[0]+'.'+months[config.publish_date.split('/')[1]-1]+'.'+config.publish_date.split('/')[2];
	- var publish_time = config.publish_time.replace(':', 'h');
	- var update_date = config.update_date.split('/')[0]+'.'+months[config.update_date.split('/')[1]-1]+'.'+config.update_date.split('/')[2];
	- var update_time = config.update_time.replace(':', 'h');
	- var publish_date_year = config.publish_date.split('/')[2];
	- var publish_date_month = config.publish_date.split('/')[1];
	- var publish_date_day = config.publish_date.split('/')[0];
	- var publish_time_hour = config.publish_time.split(':')[0];
	- var publish_time_minute = config.publish_time.split(':')[1];
	- var update_date_year = config.update_date.split('/')[2];
	- var update_date_month = config.update_date.split('/')[1];
	- var update_date_day = config.update_date.split('/')[0];
	- var update_time_hour = config.update_time.split(':')[0];
	- var update_time_minute = config.update_time.split(':')[1];

