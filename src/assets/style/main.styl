@import	'./vendor/variables.styl'
@import	'./vendor/rupture.styl'

html, body
	background-color $black
	color $white
	font-family $font
	font-size 18px
	line-height 1.5em
	font-weight 300
	max-width 700px
	margin 0 auto

.main
	margin 0 10px 10px 10px

em
	font-weight 700
	font-size 1.2em

small
	font-size .8em

h1
	font-size 4em
	font-weight 700
	margin-bottom .4em
	+below(600px)
		font-size 2.5em

h3
	font-size: 1.3em

.lead
	margin 0 0 2em 0
	font-style italic

p
	font-size 1.3em
	line-height: 1.3em

button
	display: block
	text-align: center
	width: 120px
	color: $black
	background-color: $white
	border: 1px solid $white
	border-radius: 5px
	margin: 20px 0
	padding: 10px
	font-size: 1em
	font-family: $font
	&:hover
		background-color: $black
		color: $white

.main > *
	padding-bottom: 20px
	margin-bottom 40px
	border-bottom 1px solid $lwhite

@import	'./vendor/mailchimp.styl'

@import	'./vendor/store.styl'
