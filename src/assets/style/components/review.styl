.review
	margin-top: 30px
	padding: 10px 30px
	border 1px solid $black
	background-color: $black
	color: $white
	border-radius: 5px
	margin-bottom: 30px
	h2
		font-size: 2em
	h4
		font-style: italic
		font-size: 1.3em
		margin-bottom: 10px
	.grid
		display grid
		grid-template-columns 3fr 1fr 1fr
		.grid_header
			font-weight $bold
			margin-bottom 5px
		.rev_item
			margin-bottom 5px
	.pagto_btn
		btn-white()
	a.rev-url
		margin 0
		padding 0
		a-btn()
		btn-white()

