html, body
	height: 100%

.main
	display: grid
	grid-template-columns: 330px 1fr 330px
	grid-column-gap: 50px

	.opening, .store, .about
		margin: 30px 0
		padding: 10px 30px
		border 1px solid $black
		border-radius: 5px

	.left, .right
		width: 330px

a
	color: $black
	&:hover
		color: lighten($black, 50)
