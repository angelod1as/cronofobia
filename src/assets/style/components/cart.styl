.cart
	margin: 30px 0
	border 1px solid $black
	border-radius: 5px
	position fixed
	right: 30px
	width: 330px
	.cart-inner
		padding: 10px 30px
	.prod
		border-bottom: 1px solid $black
		padding-bottom: 15px
		margin-bottom: 15px
		&:last-child
			border-bottom: 0
			margin-bottom: 0
		h3
			margin: 0
		p
			display: inline-block
			margin: 0
			span
				font-weight: $bold
	.cart_total
		font-weight: $bold
	.cart_table
		max-height: 30vh
		overflow: hidden
		overflow-y: auto
		padding: 10px
		border: 1px solid $border
		border-radius: 5px
