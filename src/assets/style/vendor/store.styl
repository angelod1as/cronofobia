.storefront
	margin-top: 50px
	display: grid
	grid-template-columns: repeat( auto-fit, minmax(250px, 1fr))
	grid-gap: 100px 50px
	p
		margin: 0
	.suggested
		font-size: 0.9em
	.description
		font-size: 1.1em
	img
		width: 100%
	.form
		margin-top: 20px
		label
			display: block
			input
			input[id="price"]
			input[id="qtd"]
				font-family: $font
				width: 50px
